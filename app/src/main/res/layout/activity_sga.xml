<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/unnamed3"
    android:layout_height="match_parent"
    tools:context="john2501.projetperso.Controller.SGAActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        app:srcCompat="@drawable/sga" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/SGA_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 1" />

            <Button
                android:id="@+id/SGA_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 3" />

            <Button
                android:id="@+id/SGA_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/SGA_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 2" />

            <Button
                android:id="@+id/SGA_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 4" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
