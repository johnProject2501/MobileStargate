<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/unnamed3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="john2501.projetperso.Controller.SG1Activity"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        app:srcCompat="@drawable/acteurssg1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/SG1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 1" />

            <Button
                android:id="@+id/SG1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 3" />

            <Button
                android:id="@+id/SG1_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 5" />

            <Button
                android:id="@+id/SG1_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 7" />

            <Button
                android:id="@+id/SG1_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/SG1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 2" />

            <Button
                android:id="@+id/SG1_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 4" />

            <Button
                android:id="@+id/SG1_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 6" />

            <Button
                android:id="@+id/SG1_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 8" />

            <Button
                android:id="@+id/SG1_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saison 10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
